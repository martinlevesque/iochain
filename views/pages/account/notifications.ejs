<div id="notifications" v-cloak>
  <div class="container">
    <h1>Notification Settings</h1>
    <hr/>
    <ajax-form action="updateNotifications" :syncing.sync="syncing" :cloud-error.sync="cloudError" @submitted="submittedForm()"
      :handle-parsing="handleParsingForm">
      <div class="row" v-for="notificationId in Object.keys(formData.notifications)">
        <div class="col-sm-6" v-if="notificationValid(notificationId)">
          <div class="form-group">
            <input  type="checkbox" v-model="formData.notifications[notificationId].active">
            <label >{{labelNotification(notificationId)}}</label>
          </div>
        </div>

        <div class="col-sm-6" v-if="notificationValid(notificationId)">
          <div class="form-group">
            <label>Notify to (email)</label>
            <input class="form-control"
              type="text" v-model.trim="formData.notifications[notificationId].notify_to" placeholder="">
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-6">
        </div>

        <div class="col-sm-6">
          <div class="form-group text-right">
            <a class="btn btn-outline-info" href="/account/payout">Cancel</a>
            <ajax-button type="submit" :syncing="syncing" class="btn btn-dark">Save changes</ajax-button>
          </div>
        </div>
      </div>
    </ajax-form>
  </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
